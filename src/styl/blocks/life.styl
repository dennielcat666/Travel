.life
	padding-top 149px
	padding-bottom 118px
	@media tablet
		padding-top 100px
	@media mobile
		padding-top 50px

	&__block
		display flex
		@media tablet
			flex-direction column
			justify-content center

	&__test
		max-width 480px
		width 100%
		@media tablet
			max-width none

	&__gallery
		margin-left 90px
		max-width 430px
		width 100%
		text-align center
		@media tablet
			margin-left 0
			margin-top 30px
			max-width none

.test
	&__title
		text-transform uppercase
		font-family Montserrat
		font-weight 700
		font-size 50px
		color black-color
		text-align center
		@media small
			font-size 40px

	&__mail-first
		position relative
		max-width 440px
		width 100%
		margin-top 20px	
		line-height 28px
		padding 25px 75px 25px 5px
		@media tablet
			margin 0 auto
		@media small
			position static
			display flex
			flex-direction column
			padding 25px 5px 25px 5px

	&__mail-second
		position relative
		max-width 440px
		width 100%
		margin-top 34px	
		line-height 28px
		padding 20px 75px 25px 5px
		background-color light-pink
		border-radius 5px
		@media tablet
			margin 0 auto
			margin-top 30px
		@media small
			position static
			display flex
			flex-direction column
			padding 20px 5px 25px 5px

.mail
	&__text
		color black-color
		font-family PTSerif
		font-weight 400
		font-size 20px
		@media mobile
			font-size 18px
		@media small
			text-align center

	&__for
		margin-top 14px
		color pink-color
		font-family Montserrat
		font-weight 500
		font-size 20px
		@media mobile
			font-size 18px
		@media small
			font-size 17px
			text-align center

	&__photo-first
		position absolute
		top 33px
		right -20px
		@media mobile
			right 0
		@media small
			position static
			order -1
			max-width 105px
			margin 0 auto
			width 100%

	&__photo-second
		position absolute
		top 19px
		right -30px
		@media mobile
			right 0
		@media small
			position static
			order -1
			max-width 105px
			margin 0 auto
			width 100%

.gallery
	&__title
		text-align center
		text-transform uppercase
		font-family Montserrat
		font-weight 700
		font-size 50px
		color pink-color

	&__box
		display flex
		margin-top 54px
		padding 0px 0px 0px 0px
		@media tablet
			justify-content space-around

	&__block
		&:first-child
			margin-left 36px
		&:not(:first-child)
			margin-left 30px
		@media tablet
			display flex
			flex-direction column
			&:first-child
				margin-left 0
			&:not(:first-child)
				margin-left 0

	&__img
		&:last-child
			margin-top 25px
			@media tablet
				margin-top 50px

	&__link
		margin-top 43px
		text-decoration underline
		display inline-block
		text-transform uppercase
		color pink-color
		font-family Montserrat
		font-weight 700
		font-size 20px

