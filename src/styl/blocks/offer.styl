.offer
	background-color light-pink
	padding-top 61px
	@media tablet
		padding-bottom 60px
	@media small
		padding-top 45px
		padding-bottom 45px

	&__title
		text-align center
		color black-color
		text-transform uppercase
		font-family Montserrat
		font-weight 700
		font-size 50px
		@media small
			font-size 40px

	&__cards
		display flex
		margin-top 48px
		@media tablet
			flex-wrap wrap
			justify-content center
			margin-top 28px

	&__card-wrap
		max-width 320px
		width 100%
		background-color #fff
		text-align center
		font-family PTSerif
		font-weight 400
		padding 30px 60px 0px 60px
		border-radius 5px
		&:not(:first-child)
			margin-left 16px
		@media tablet
			max-width none 
			flex 0 1 52%
			padding 30px 20px 30px 20px
			margin-top 20px
			&:not(:first-child)
				margin-left 0
			// &:not(:first-child)
			// 	margin-left 20px
		@media mobile
			flex 0 1 100%
			&:not(:first-child)
				margin-left 0
				margin-top 20px
.card-wrap
	&__name
		font-size 22px

	&__price
		margin-top 30px
		text-transform uppercase
		color pink-color
		font-family Montserrat
		font-weight 700
		font-size 60px

	&__info
		margin-top 22px
		font-size 20px
		line-height 7px
		@media tablet
			line-height 20px

	&__link
		font-size 22px
		margin-top 36px
		font-family Montserrat
		font-weight 700
		max-width 210px
		width 100%
		display inline-block
		text-transform uppercase
		color black-color
		background-color light-pink
		padding 14px 50px 14px 50px
		&:hover
			background-color pink-color
			color #fff
		@media tablet
			padding 14px 40px 14px 40px
		@media small
			padding 14px 30px 14px 30px